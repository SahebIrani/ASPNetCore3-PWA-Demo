@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


@using WebEssentials.AspNetCore.Pwa
@inject WebManifest wm
@{
	if (!Request.IsHttps && Request.Host.Host != "localhost")
	{
		Response.Redirect("https://" + Request.Host);
	}
}

<h1>PWA Sample</h1>
    <dl>
        <dt>Name</dt>
        <dd>@wm.Name</dd>
        <dt>Short name</dt>
        <dd>@wm.ShortName</dd>
    </dl>
    <img src="~/icon.png?v=hash" />

    <button onclick="showimage()">Show image</button>

    <script>
        function showimage() {
            document.body.innerHTML += '<img src="/icon2.png?rnd=' + Math.random() + '" />' +
                                       '<img src="/icon2.png?v=hash&rnd=' + Math.random() + '" />' +
                                       '<img src="https://madskristensen.net/img/icon16x16.png" />' +
                                       '<img src="https://madskristensen.net/img/icon32x32.png?v=hash" />';
        }
    </script>